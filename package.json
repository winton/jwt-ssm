{
  "name": "jwt-ssm",
  "version": "0.18.0",
  "description": "Generate and verify JWT tokens with AWS SSM Parameter Store",
  "main": "dist/index.js",
  "bin": {
    "jwt-ssm": "./bin/jwt-ssm"
  },
  "scripts": {
    "build": "./bin/build",
    "release": "./bin/release",
    "test": "mocha",
    "update": "ncu -u",
    "watch": "tsc -b -w"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/winton/jwt-ssm.git"
  },
  "author": "Winton Welsh <mail@wintoni.us>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/winton/jwt-ssm/issues"
  },
  "homepage": "https://github.com/winton/jwt-ssm#readme",
  "devDependencies": {
    "@types/jsonwebtoken": "8.3.9",
    "@types/mocha": "7.0.2",
    "@types/node": "13.13.4",
    "@typescript-eslint/eslint-plugin": "2.30.0",
    "@typescript-eslint/parser": "2.30.0",
    "eslint": "6.8.0",
    "eslint-config-prettier": "6.11.0",
    "eslint-plugin-prettier": "3.1.3",
    "expect": "25.4.0",
    "husky": "4.2.5",
    "lint-staged": "10.1.7",
    "mocha": "10.2.0",
    "npm-check-updates": "4.1.2",
    "prettier": "2.0.5",
    "release-it": "13.7.2",
    "semver": "7.3.2",
    "typescript": "3.8.3"
  },
  "dependencies": {
    "@google-cloud/secret-manager": "3.0.0",
    "aws-sdk": "2.664.0",
    "jsonwebtoken": "8.5.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && npm test"
    }
  },
  "lint-staged": {
    "*.{css,json,md}": [
      "prettier --write",
      "git add"
    ],
    "*.{js,jsx,ts}": [
      "eslint --ignore-path .gitignore --fix",
      "git add"
    ]
  }
}
